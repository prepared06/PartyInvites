@model IEnumerable<PartyInvites.Models.GuestResponse>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
        <link rel="stylesheet" href="~/css/BodyDesign.css" />
        <title>Гости</title>
    </head>
    <body>
        <div class="container d-flex justify-content-center mt-3">
            <h2 class="text-light shadow-text">Список людей принявших приглашение</h2>
        </div>        
        <div class="container">
            <table class="table table-bordered">
            <thead>
                <tr class="text-light shadow-text">
                    <th class="col">Имя</th>
                    <th class="col">Эмайл</th>
                    <th class="col">Телефон</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var r in Model)
                {
                    <tr class="text-light shadow-text">
                        <td>@r.Name</td>
                        <td>@r.Email</td>
                        <td>@r.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>       
        <div class="container">
            <a class="btn btn-primary" asp-action="Index">На главную</a>
        </div>
    </body>
</html>