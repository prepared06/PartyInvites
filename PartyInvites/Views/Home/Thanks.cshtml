@model PartyInvites.Models.GuestResponse
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Благодарность</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
        <link rel="stylesheet" href="~/css/BodyDesign.css" />
    </head>
    <body>
        <div class="m-5"></div>
        <div class="container d-flex justify-content-center mt-5 text-light shadow-text">
            <div>
                <h1>Спасибо, @Model.Name !</h1>
                @if (Model.WillAtend == true)
                {
                    <h3>Здорово что вы присоеденитесь, выпивка уже на столе! </h3>
                }else{
                    <h3>Жаль что вас не будет, нам будет вас не хватать на этом празднестве. </h3>
                }
                <br />
                <h3>Нажмите <a class="alert-link" asp-action="ListResponses" style="text-decoration: none;">сюда</a> чтобы увидеть кто прийдет.</h3>
            </div>
        </div>
    </body>
</html>
